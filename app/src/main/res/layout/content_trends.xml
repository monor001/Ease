<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_trends"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="views.Trends"
    tools:showIn="@layout/app_bar_trends">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:id="@+id/upper_part"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">

        <Button
            android:id="@+id/button2"
            style="@style/Statistic"/>

        <Button
            android:id="@+id/menu"
            style="@style/Menu.button"
            android:clickable="false" />

        <ImageView
            android:id="@+id/Logo_Welcome"
            style="@style/Ease_Logo.Normal"/>

        <ImageView
            app:srcCompat="@drawable/arcs"
            android:id="@+id/arcs"
            android:layout_width="180dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_height="85dp" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginBottom="16dp"
        android:layout_above="@+id/kokoDrag"
        android:layout_centerHorizontal="true">
        <FrameLayout
            android:layout_height="1dp"
            android:background="@drawable/strock"
            android:id="@+id/verticallinefram"
            android:layout_width="200dp">

        </FrameLayout>

        <TextView
            android:text="wegerhgt43ewfgwergweg\nsefewfwegwefwef\nwefwefwegwefwefwef"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/questiontxt"
            android:textColor="#ffffff"
            android:layout_marginTop="10dp" />

        <Button
            android:text="Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btn_trends"
            android:layout_marginTop="35dp"
            android:background="@drawable/strock"
            android:textColor="@android:color/background_light" />

    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/koko_circle"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="50dp"
        android:id="@+id/kokoDrag" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bottom_btn"
        android:layout_alignParentBottom="true"
        android:background="@drawable/strock"
        android:minHeight="40dp"/>


</RelativeLayout>
