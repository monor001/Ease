<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_statistics_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="views.StatisticsView"
    tools:showIn="@layout/app_bar_statistics_view">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:id="@+id/upper_part"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">

        <Button
            android:id="@+id/button2"
            style="@style/Statistic"/>

        <Button
            android:id="@+id/menu"
            style="@style/Menu.button"
            android:clickable="false" />

        <ImageView
            android:id="@+id/Logo_Welcome"
            style="@style/Ease_Logo.Normal"/>

        <ImageView
            app:srcCompat="@drawable/arcs"
            android:id="@+id/arcs"
            android:layout_width="180dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_height="85dp" />

    </RelativeLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/upper_part"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp">

            <ProgressBar
                style="?android:attr/progressBarStyleHorizontal"
                android:max="100"
                android:progress="0"
                android:progressDrawable="@drawable/circular"
                android:layout_weight="1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginRight="30dp" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_weight="1">

                <TextView
                    android:text="TextView"
                    style="@style/Text_Style.Statistics.Numbers"/>

                <TextView
                    android:text="Couses"
                    style="@style/Text_Style.Statistics.Text" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp">

            <ProgressBar
                style="?android:attr/progressBarStyleHorizontal"
                android:max="100"
                android:progress="0"
                android:progressDrawable="@drawable/circular"
                android:layout_weight="1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginRight="30dp" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_weight="1">

                <TextView
                    android:text="TextView"
                    style="@style/Text_Style.Statistics.Numbers"/>

                <TextView
                    android:text="Chapters"
                    style="@style/Text_Style.Statistics.Text" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp">

            <ProgressBar
                style="?android:attr/progressBarStyleHorizontal"
                android:max="100"
                android:progress="0"
                android:progressDrawable="@drawable/circular"
                android:layout_weight="1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginRight="30dp" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_weight="1">

                <TextView
                    android:text="TextView"
                    style="@style/Text_Style.Statistics.Numbers"/>

                <TextView
                    android:text="Questions"
                    style="@style/Text_Style.Statistics.Text" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp">

            <ProgressBar
                style="?android:attr/progressBarStyleHorizontal"
                android:max="100"
                android:progress="0"
                android:progressDrawable="@drawable/circular"
                android:layout_weight="1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginRight="30dp" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_weight="1">

                <TextView
                    android:text="TextView"
                    style="@style/Text_Style.Statistics.Numbers"/>

                <TextView
                    android:text="Cards"
                    style="@style/Text_Style.Statistics.Text" />
            </LinearLayout>

        </LinearLayout>


    </LinearLayout>


</RelativeLayout>
